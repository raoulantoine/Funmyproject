{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <main class="page-content">
        <div class="container">
            <h1>Découvrez l'ensemble de nos projets</h1>
            <div class="row">
                {% for project in projects %}
                    <article class="col-4">
                        <div class="card">
                            <img src="{{ asset('uploads/' ~ project.image) }}" class="card-img-top"
                                 alt="{{ project.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ project.name }}</h5>
                                <ul class="badges">
                                    {% for category in project.categories %}
                                        <li><a class="badge badge-pill badge-primary"
                                               href="{{ path('category_show' , {'id':category.id}) }}">{{ category.name }}
                                            </a></li>
                                    {% endfor %}
                                </ul>
                                <p class="card-text">{{ project.excerpt }}</p>
                                <a href="{{ path('project_show' , {'id':project.id}) }}" class="btn btn-primary">
                                    <i class="fa fa-eye"></i>
                                    Voir plus
                                </a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
            <nav>
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </main>
{% endblock %}
