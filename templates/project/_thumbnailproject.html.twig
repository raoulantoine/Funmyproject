<article class="col-4">
    <div class="card">
        <img src="{{ asset('uploads/' ~ project.image) }}" alt="{{ project.name }}">
        <div class="card-body">
            <h5>{{ project.name }}</h5>
            <ul class="badges">
                {% for category in project.categories %}
                    <li><a class="badge badge-pill badge-primary" href="{{ path('category_show' , {'id':category.id}) }}">{{ category.name }}</a></li>
                {%  endfor %}
            </ul>
            <p class="card-text">{{ project.excerpt }}</p>
            <a href="{{ path('project_show' , {'id':project.id}) }}" class="btn btn-primary">
                <i class="fa fa-eye"></i>
                Voir plus
            </a>
        </div>
    </div>
</article>